{
    "version": 2,
    "builds": [
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/events",
            "dest": "/api/index"
        },
        {
            "src": "/vehicles/(.*)",
            "dest": "/api/index"
        },
        {
            "src": "/zones",
            "dest": "/api/index"
        },
        {
            "src": "/health",
            "dest": "/api/index"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}